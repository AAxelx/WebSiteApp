@model GpuViewModel

@{
    ViewData["Title"] = $"{Model.Gpu.Name}";
}
<div class="card-deck">
    <div class="card text-center" style="border: none">
    </div>
    <div class="card text-center" style="border: none">
        <img src="http://" class="card-img-top" alt="..." />
        <div class="card-body">
            <h5 class="card-title">@Model.Gpu.Name</h5>
            <a class="card-text" style="font-size: 10px">@Model.Gpu.Manufacturer</a>
            <a class="card-text" style="font-size: 10px">@Model.Gpu.Power</a>
            <a class="card-text" style="font-size: 10px">@Model.Gpu.CudaCores</a>
            <a class="card-text" style="font-size: 10px">@Model.Gpu.Generation</a>
            <p class="card-text">@Model.Gpu</p>
            <p class="card-text">Presented: @Model.Gpu.Presented</p>
            <a href="/GameCatalog/Catalog?Page=@Model.Page&sortedType=@Model.SortedType" class="btn btn-primary" style="font-size: 20px;">Back</a>
        </div>
        <div class="card text-center" style="border: none">
        </div>
    </div>
</div>